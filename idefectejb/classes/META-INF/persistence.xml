<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="idefectejbPU" transaction-type="JTA">
  		<jta-data-source>java:/defectDS</jta-data-source>
  		<properties>
  			<!--  Hibernate SQL方言设置，这里是设置成Oracle的SQL方言 -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.Oracle9Dialect" />
			<!-- 其实这个hibernate.hbm2ddl.auto参数的作用主要用于：
				自动创建|更新|验证数据库表结构。如果不是此方面的需求建议set value="none"。 -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
  
</persistence>
